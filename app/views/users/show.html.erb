<div class="row">
  <div class="col-md-4">
    <%= profile_image_for @user %>
    <h1><%= get_full_name_for(@user) %></h1>
    <p>Email: <%= @user.email %></p>
    <% if @user == current_user  %>
      <%= link_to "Update your profile", me_edit_path %>
    <% end %>
  </div>

  <div class="col-md-8">
    <% if @user == current_user %>
       <div class="new-post mb-3">
         <%= render 'posts/form' %>
    </div>
    <% end %>
       <% if @user.posts.any? %>
      <h2>Posts</h2>
      <ul class="list-unstyled pl-0">
        <%= render @user.posts %>
      </ul>
    <% end %>
  </div>
</div>

